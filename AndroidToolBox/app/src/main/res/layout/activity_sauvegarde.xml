<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SauvegardeActivity" android:id="@+id/ConstraintLayout">

    <TextView
            android:text="@string/saisir_vos_informations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.497"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/prenom"
            android:hint="@string/prenom" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"/>
    <Button
            android:text="@string/sauvegarder_vos_infos"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/saveData"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/white" android:background="@android:color/holo_red_dark"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nom" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/prenom" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="@string/nom"/>
    <Button
            android:text="@string/afficher_vos_infos"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/displayInfo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/saveData"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_dark" android:layout_marginTop="6dp"/>
    <TextView
            android:text="@string/date_de_naissance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calendrier"
            android:hint="@string/date_de_naissance"
            app:layout_constraintTop_toTopOf="@+id/textView11"
            app:layout_constraintBottom_toBottomOf="@+id/textView11"
            app:layout_constraintStart_toEndOf="@+id/textView11" android:layout_marginStart="32dp"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="@string/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            app:layout_constraintStart_toStartOf="@+id/nom"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/nom"/>
</android.support.constraint.ConstraintLayout>